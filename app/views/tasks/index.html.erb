<div class="container-fluid" id="dashboard" style="margin-top:1em;">
  <div class="row-fluid">
    <div class="span8">

      <div class="row tasklist">
      		<table class="table table-striped table-bordered table-hover" rel="<%= @status_unassigned.id %>">
      			<caption class="unassigned">Unassigned</caption>
      			<thead>
				  <tr>
				    <th>Name</th>
				    <th>Description</th>
				    <th>Owner</th>
				    <th>Priority</th>
				    <th>Deadline</th>
				    <th>Actions</th>
				  </tr>
				</thead>
			  
			  <tbody>
				<% @unassigned.each do |task| %>
				  <tr rel="<%= task.id %>">
				    <td><%= task.name %></td>
				    <td><%= task.description %></td>
				    <td><%= task.user.firstname %></td>
				    <td><%= task.priority(:name) %></td>
				    <td><%= task.deadline.strftime('%d.%m.%Y') %></td>
				    <td>
				    <%= link_to raw('<i class="icon-eye-open"></i>'), task %>
				    	<%= link_to raw('<i class="icon-edit"></i>'), edit_task_path(task) %>
				    	<%= link_to raw('<i class="icon-remove"></i>'), task, method: :delete %>
				    </td>
				  </tr>
				<% end %>
